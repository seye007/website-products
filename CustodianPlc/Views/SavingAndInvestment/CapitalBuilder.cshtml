@*@using CustodianProduct.Infrastructure.Settings*@
@model LifeQuoteVm
@section style{
	<link href="~/css/modal.css" rel="stylesheet" asp-append-version="true" />
}
<div id="modal">
	<div id="modal-overlay"></div>
	<div id="modal-container">
		<div class="modal-main" id="loader-modal">
			<div>
				<img src="https://custodianplc.com.ng/img/loader.gif">
			</div>
		</div>
	</div>
</div>
<section class="page-header b-bordered t-bordered hpadding">
	<div class="container">
		<div class="row">
			<div class="col-sm-12">
				<h1 class="title mt-5">@ViewData["productName"]</h1>
				<nav class="c-breadcrumb-1 -style-icons pull-right">
					<ol class="c-breadcrumb-1-inner">

						<li class="c-breadcrumb-1-item">
							<a href="https://custodianplc.com.ng" class="c-breadcrumb-1-link">
								<i class="c-breadcrumb-1-icon fa fa-home" aria-hidden="true"></i>
							</a>
						</li>

						<li class="c-breadcrumb-1-item">
							<a href="https://custodianplc.com.ng/life-products" class="c-breadcrumb-1-link">
								<i class="c-breadcrumb-1-icon fa fa-file-text-o" aria-hidden="true"></i>
								Life Insurance
							</a>
						</li>

						<li class="c-breadcrumb-1-item">
							<a href="https://custodianplc.com.ng/personal-provident-plan" class="c-breadcrumb-1-link">
								<i class="c-breadcrumb-1-icon " aria-hidden="true"></i>
								@ViewData["productName"]
							</a>
						</li>
					</ol>
				</nav>
			</div>
		</div>
	</div>
</section>
<div class="container product-content">

	<div class="stepwizard col-md-12 formtop-width">
		<div class="stepwizard-row setup-panel">
			<div class="stepwizard-step">
				<a class="btn btn-primary disable btn-circle stepwizard-1" href="#step-2" type="button" disabled>1</a>
				<p>Personal Information</p>
			</div>
			<div class="stepwizard-step">
				<a class="btn btn-default disable btn-circle stepwizard-2" href="#step-2" type="button" disabled>2</a>
				<p>Beneficiary Details</p>
			</div>
			<div class="stepwizard-step">
				<a class="btn btn-default disable btn-circle stepwizard-3" href="#step-3" type="button">3</a>
				<p>Quote Summary</p>
			</div>
		</div>
	</div>
	<div class="row" style="margin-bottom:50px">
		<div class="col-md-12 order-md-1 order-2 form-sha">
			<form id="product-form" role="form" asp-antiforgery="true" method="post" enctype="multipart/form-data">
				<input type="hidden" id="quote_code" name="quote_code" value="">
				<input type="hidden" id="product_name" name="product_name"
					data-product-name="/Sales/Calculate-Premium" value="@ViewData["productName"]">
				<input type="hidden" id="reference_number_data" />
				<input type="hidden" data-premium-url="/Sales/Calculate-Premium" />
			</form>
		</div>
	</div>
</div>
@section script{
	@*<script src="~/dist/js/main.js" type="text/javascript" asp-append-version="true"></script>*@
	<script src="~/js/index.js" type="module" asp-append-version="true"></script>
}
